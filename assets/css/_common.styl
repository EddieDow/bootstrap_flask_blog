
a {
  text-decoration: none;

  &:hover {
    text-decoration: none;
  }
}

.panel {
  width: 320px;
  margin: 0;
  padding: 0;

  border: 1px solid #ddd;
  border-radius: 4px;
  //box-shadow: 0px 6px 12px 0px rgba(0,0,0,0.18)

  .panel-heading {
    background-color: #f5f5f5;
    height: 40px;
    border-top-right-radius: 3px;
    border-top-left-radius: 3px;
  }

  .panel-body {
    height: 270px;
    padding: 0;
    margin: 0;
    background-color: #fff;
  }

  .panel-footer {
    height: 30px;
    font-size: 12px;
    padding: 10px;
    line-height: 1;
    background-color: #f5f5f5;
    border-bottom-right-radius: 3px;
    border-bottom-left-radius: 3px;

    svg {
      height: 17px;
    }
  }
}


.content-row {
  margin-left: 0;
  margin-right: 0;


  .content-item {
    padding: 20px;
    background-color: $color5;
    margin-bottom: 20px;

    a {
      color: $color4;
    }

  }
}


.post-column {
  .post-date {
    color: $color7;
    font-size: 13px;
    svg {
      display: block;
      width: 14px;
      height: 14px;
    }
  }
  .post-title {
    font-size: 1.5rem;
  }
  .post-author {
    color: $color7;
  }
}
