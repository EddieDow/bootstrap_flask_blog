$color1 = #5b9bd1;
$color2 = #fafcfd;
$color3 = #f1f3fa;
$color4 = #5a7391;
$color5 = #f6f9fb;
$color6 = #f0f4f7;
$color7 = #93a3b5;

$container-margin-top = 48px;

html,
body
    margin: 0;
    padding: 0;
    background: #fff;

    .container
        margin-top: $container-margin-top;


a:hover
    text-decoration: none;


.user
    &-sidebar {
        padding: 20px 0 10px 0;
        background: $color3;

        &-title {
            text-align: center;
            margin-top: 20px;
            color: $color4;
            font-size: 20px;
            font-weight: 600;
            margin-bottom: 7px;
        }

        &-buttons {
            text-align: center;
            margin-top: 10px;

            .btn {
                text-transform: uppercase;
                font-size: 11px;
                font-weight: 600;
                padding: 6px 15px;
                margin-right: 5px;

                &:last-child {
                    margin-right: 0;
                }
            }
        }

        &-social {

        }

        &-menu {
            margin-top: 30px;

            a {

                color: $color7;
                font-size: 14px;
                font-weight: 400;

                &:hover {
                    background-color: $color2;
                    color: $color1;
                }

                i {
                    margin-right: 8px;
                    font-size: 14px;
                }
            }

            .active {
                background-color: $color5;

                a {
                    color: $color1;
                    border-left: 2px solid $color1;

                    span {
                        margin-left: -2px;
                    }
                }
            }


        }
    }

    &-content {
        background: $color3;
        padding: 40px 40px;
        min-height: 460px;

        &-item {
            display: inline-flex;
            padding: 20px;
            background-color: $color5;
            margin-bottom: 20px;

            //^[-1]:last-child {
            //    margin-bottom: 0;
            //}

            .profile {
                padding: 10px;
                text-align: center;

                a {
                    color: $color4;
                }
            }
        }
    }


/*
 * button
 */
.button-ghost {
    border-radius: 18px;
    background-color: transparent;
    color: #ff3366;
    border-color: #ff3366;
    padding: 0 25px;
    line-height: 36px;
    /*height: 36px;*/
}

a.button-ghost:hover {
    color: #fff;
    border-color: #ff3366;
    background-color: #ff3366;
}

/*
 * tile
 */
.tile {
    background-color: #fff;
    margin-bottom: 30px;
    box-shadow: 0 1px 2px 0 rgba(0, 0, 0, 0.1);
}

.tile .tile-body {
    padding: 22px;
}


/*
 * post-tile
 */
.post-tile {

}

.post-tile .post-meta {
    display: table;
    margin-bottom: 16px;
}

.post-tile .post-meta .post-date {
    font-size: 12px;
}

.post-tile .post-meta .post-author {
    display: inline-block;
    font-size: 13px;
    color: #aeaeae;
    margin-right: 8px;
}

.post-tile .post-meta .post-delimiter {
    color: #aeaeae;
    margin-right: 8px;
}

.post-tile .post-meta .post-category {
    display: inline-block;
    font-size: 13px;
    color: #aeaeae;
    margin-right: 8px;
}

.post-tile .post-meta .post-tag {
    display: inline-block;
    font-size: 13px;
    color: #aeaeae;
    margin-right: 8px;
}

.post-tile .post-meta .post-do {
    display: inline-block;
    font-size: 13px;
    color: #aeaeae;
    margin-right: 8px;
}

.post-tile .post-meta .post-date a,
.post-tile .post-meta .post-author a,
.post-tile .post-meta .post-delimiter a,
.post-tile .post-meta .post-category a,
.post-tile .post-meta .post-tag a {
    color: #aeaeae;
}

.post-tile .post-meta .post-date a:hover,
.post-tile .post-meta .post-author a:hover,
.post-tile .post-meta .post-category a:hover,
.post-tile .post-meta .post-tag a:hover,
.post-tile .post-meta .post-do:hover {
    color: #ff3366
}

.post-tile .post-body .post-title {
    display: inline-block;
    font-size: 24px;
    margin-bottom: 17px;
}

.post-tile .post-body .post-title > a {
    color: #777;
}

.post-tile .post-body .post-title > a:hover {
    color: #ff3366
}

.post-tile .post-body p {
    color: #808080;
}

.post-tile .post-body .preview {
    /*margin: 0 0 24px;*/
    /*line-height: 1.5;*/
    /*font-size: 14px;*/
    -webkit-line-clamp: 3;
    display: -webkit-box;
    -webkit-box-orient: vertical;
    text-overflow: ellipsis;
    overflow: hidden;
}

/*
 * sidebar
 */
.sidebar {
    padding: 24px;
    background-color: #fff;
    box-shadow: 0 1px 2px 0 rgba(0, 0, 0, 0.1);
}

.sidebar .widget {
    word-wrap: break-word;
    overflow-wrap: break-word;
    margin-bottom: 38px;
}

.sidebar .widget .current {
    color: #ff3366;
}

.sidebar .widget .current span {
    color: #fff;
    background-color: #ff3366;
}

.sidebar .widget .widget-title {
    font-size: 15px;
    color: #404040;
    border-bottom: 1px solid #eee;
    margin-bottom: 11px;
    margin-left: -24px;
    margin-right: -24px;
    padding: 0 24px 16px;
}

.widget-categories > ul {
    font-size: 16px;
    list-style: none;
    margin: 0;
    padding: 0;
}

.widget-categories > ul li {
    border-top: 1px solid #eee;
}

.widget-categories > ul li:first-child {
    border-top: none;
}

.widget-categories > ul li a {
    display: block;
    position: relative;
    font-size: 14px;
    color: #3d4652;
    padding: 11px 0;
}

.widget-categories > ul li a .count {
    /*height: 20px;*/
    line-height: 20px;
    border-radius: 10px;
    color: #3d4652;
    background-color: #eee;
    padding: 1px 6px;
    margin-top: -10px;
    position: absolute;
    top: 50%;
    right: 0;
    transition: all 0.3s;
}

.widget-categories > ul li:hover a {
    color: #ff3366;
}

.widget-categories > ul li:hover span {
    color: #fff;
    background-color: #ff3366;
}

.widget-tags a {
    display: inline-block;
    /*height: 30px;*/
    line-height: 30px;
    color: #3d4652;
    border: 1px solid #ddd;
    border-radius: 15px;
    padding: 0 5px 0 12px;
    margin: 0 5px 12px 0;
    font-size: 14px;
}

.widget-tags > a:hover {
    color: #ff3366;
}

.widget-tags > a:hover span {
    color: #fff;
    background-color: #ff3366;
}

