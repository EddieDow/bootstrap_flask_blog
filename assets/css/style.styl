/*
 * pagination
 */
.pagination {
    display: table;
    margin: 0 auto;
    padding: 24px 0;
}

.pagination .nav-links a {
    display: inline-block;
    font-size: 14px;
    color: #3d4652;
    margin: 0 6px 0 6px;
}

.pagination .nav-links .current {
    color: #ff3366;
    cursor: not-allowed;
    pointer-events: none;
}

.pagination .nav-links .prev > i {
    margin-right: 5px;
}

.pagination .nav-links .next > i {
    margin-left: 5px;
}

.pagination .nav-links a:hover {
    color: #ff3366;
}

.pagination .nav-links .disabled {
    cursor: not-allowed;
    pointer-events: none;
    color: #777 !important;
}